<div class='container'>
  <div class='row'>
    <div class="col-md-8 px-5 px-sm-0 mx-auto">
  <h2>Follows</h2>
    <table class='table'>
      <thead>
      <tr>
        <th>Image</th>
        <th>name</th>
        <th></th>
        <th></th>
      </tr>
      </thead>
      <tbody>
      <% @users.each do |user| %>
        <tr>
          <td>
            <%= link_to user_path(user) do %>
              <%= image_tag user.get_profile_image, size: "50x50" %>
            <% end %>
          </td>
          <td><%= user.name %></td>
          <td>フォロー数：<%= user.followers.count %></td>
          <td>フォロワー数：<%= user.followeds.count %></td>
          <td>
            <%= link_to "Show", user_path(user) %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table> 
  </div>
</div>
</div>